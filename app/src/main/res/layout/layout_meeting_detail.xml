<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_meeting_show"
    android:layout_width="540px"
    android:layout_height="520px"
    android:layout_gravity="center"
    android:background="@drawable/bg_meeting_opening"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_apartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="28px"
        android:visibility="gone"
        tools:text="智能研发部" />

    <TextView
        android:id="@+id/tv_meeting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:textColor="@color/color_white"
        android:textSize="44px"
        tools:text="智能研发会议" />

    <TextView
        android:id="@+id/tv_meeting_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:textColor="@color/color_white"
        android:textSize="24px"
        tools:text="发起者：Daniel Wu" />

    <TextView
        android:id="@+id/tv_meeting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px"
        android:textColor="@color/color_white"
        android:textSize="60px"
        android:textStyle="bold"
        tools:text="14:00 - 15:30" />

    <TextView
        android:id="@+id/tv_meeting_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:text="@string/str_meeting_doing"
        android:textColor="#D3BD07"
        android:textSize="44px"
        android:textStyle="bold" />
</LinearLayout>