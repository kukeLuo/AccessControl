<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:background="#00000000">

        <TextView
            android:id="@+id/tv_err"
            style="@style/style_network_err"
            tools:text="2019/12/03 12:12" />

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20px"
            android:layout_marginRight="@dimen/dimen_time_margin_right"
            android:gravity="right"
            android:textColor="#DAFFFFFF"
            android:textSize="24px"
            tools:text="2019/12/03 12:12" />

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_layout_margin"
            android:layout_marginTop="100px"
            android:layout_marginRight="@dimen/dimen_layout_margin"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="56px"
            tools:text="互联网信息中心" />

        <TextView
            android:id="@+id/tv_info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_layout_margin"
            android:layout_marginTop="200px"
            android:layout_marginRight="@dimen/dimen_layout_margin"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="36px"
            tools:text="智能研发部" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="330px"
        android:layout_marginTop="866px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="138px"
            android:layout_height="138px"
            android:background="@drawable/icon_card_swipe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:text="@string/str_card_area"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_office_card_textsize"  />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_setting"
        style="@style/style_setting" />

    <RelativeLayout
        android:id="@+id/layout_btm_boss"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/office_top_bg"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="6px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_cloud"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginRight="20px"
                    android:scaleType="centerInside"
                    android:layout_marginTop="8px"
                    tools:src="@drawable/cloud" />

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_office_info_textsize"
                    tools:text="27~29 多云" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginRight="20px"
                    android:src="@drawable/icon_pm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM2.5: "
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_office_info_textsize" />

                <TextView
                    android:id="@+id/tv_pm_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_office_info_textsize"
                    android:textStyle="bold"
                    tools:text="111" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/bg_pm_status"
                    android:gravity="center_vertical"
                    android:paddingLeft="4px"
                    android:paddingRight="10px">

                    <ImageView
                        android:id="@+id/img_pm25_status"
                        android:layout_width="22px"
                        android:layout_height="22px"
                        android:layout_margin="4px"
                        tools:src="@drawable/icon_pm_bad" />

                    <TextView
                        android:id="@+id/tv_status_pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6px"
                        android:textColor="@color/color_white"
                        android:textSize="22px"
                        tools:text="201" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_ver"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28px"
            android:layout_marginRight="200px"
            android:layout_marginBottom="28px"
            android:background="#f9f9f9" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_click_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40px"
        android:layout_marginBottom="12px"
        android:drawableTop="@drawable/icon_enter_pwd"
        android:drawablePadding="6px"
        android:text="@string/str_setting_pwd_title"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_office_info_textsize" />

    <TextView
        android:id="@+id/tv_info_descmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_layout_margin"
        android:layout_marginTop="1208px"
        android:drawableLeft="@drawable/icon_group_left"
        android:drawableRight="@drawable/icon_group_right"
        android:drawablePadding="16px"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_office_info_textsize"
        android:visibility="gone"
        tools:text="互联网信息中心" />
</RelativeLayout>