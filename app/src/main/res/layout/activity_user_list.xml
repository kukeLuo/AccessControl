<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F14"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#152338">

        <ImageView
            android:id="@+id/img_back"
            style="@style/style_top_back"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_user_list_title"
            android:textColor="@color/color_white"
            android:textSize="48px"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@id/layout_head"
        android:text="ADD RECORD"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_search_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_head"
        android:layout_marginLeft="@dimen/dimen_user_list_margin"
        android:layout_marginTop="20px"
        android:layout_marginRight="@dimen/dimen_user_list_margin"
        android:layout_marginBottom="20px"
        android:background="@drawable/bg_round_circle"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="10px"
        android:hint="@string/str_search_name_hint"
        android:inputType="text"
        android:paddingLeft="24px"
        android:paddingTop="12px"
        android:paddingBottom="12px"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textColorHint="#99FFFFFF"
        android:textSize="26px" />

    <TextView
        android:id="@+id/tv_cnt_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_search_name"
        android:layout_marginLeft="@dimen/dimen_user_list_margin"
        android:layout_marginRight="@dimen/dimen_user_list_margin"
        android:background="#0E1622"
        android:padding="12px"
        android:textColor="#002AFE"
        android:textSize="24px" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/layout_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_cnt_total"
        android:layout_marginLeft="@dimen/dimen_user_list_margin"
        android:layout_marginRight="@dimen/dimen_user_list_margin"
        android:background="#0E1622"
        tools:layout="@layout/item_access_user" />

    <com.brc.acctrl.view.IndexBar
        android:id="@+id/share_add_contact_sidebar"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="64px"
        app:focusLetterColor="@color/color_white"
        app:letterColor="@color/color_white"
        app:letterSize="24px"
        app:letterSpacingExtra="1.1" />
</RelativeLayout>