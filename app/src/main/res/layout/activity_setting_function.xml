<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#152338">

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:textSize="48px"
            android:textStyle="bold"
            tools:text="@string/str_setting_pwd_title"/>

        <TextView
            android:id="@+id/tv_chg_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="40px"
            android:text="@string/str_chg_mode"
            android:textColor="@color/color_white"
            android:textSize="34px"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_head"
        android:divider="@drawable/divider_linearlayout"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_layout_margin"
        android:paddingTop="20px"
        android:paddingRight="@dimen/dimen_layout_margin"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_press"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            >

            <TextView
                android:id="@+id/tv_room_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="34px"
                android:textStyle="bold"
                tools:text="1111"/>

            <TextView
                android:id="@+id/tv_room_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_room_title"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="24px"
                tools:text="1112"/>

            <TextView
                android:id="@+id/tv_room_desc_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_room_desc"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="24px"
                tools:text="1113"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_list"
            style="@style/style_text_next"
            android:text="@string/str_setting_user_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_enter_record"
            style="@style/style_text_next"
            android:text="@string/str_setting_record"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_list"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_identification_log"
            style="@style/style_text_next"
            android:text="@string/str_identification_log"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_list" />
        <TextView
            android:id="@+id/tv_configuration"
            style="@style/style_text_next"
            android:text="@string/str_configuration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_identification_log" />


        <TextView
            android:id="@+id/tv_setting"
            style="@style/style_text_next"
            android:text="@string/str_setting_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_record"/>

        <TextView
            android:id="@+id/tv_check_opendoor"
            style="@style/style_text_next"
            android:text="@string/str_setting_open_door"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_setting"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="844px"
        android:drawableLeft="@drawable/icon_error"
        android:drawablePadding="20px"
        android:gravity="center_vertical"
        android:textColor="@color/color_white"
        android:textSize="40px"
        android:visibility="gone"
        tools:text="111"/>

    <TextView
        android:id="@+id/tv_enter"
        style="@style/style_btn_confirm"
        android:layout_marginLeft="100px"
        android:layout_marginTop="944px"
        android:layout_marginRight="100px"
        android:text="@string/str_confirm"/>

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/style_btn_cancel"
        android:layout_below="@id/tv_enter"
        android:layout_centerHorizontal="true"
        android:text="@string/str_cancel"/>
</RelativeLayout>