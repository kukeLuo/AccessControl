<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F14"
    >

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#152338">

        <ImageView
            android:id="@+id/img_back"
            style="@style/style_top_back"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_update_title"
            android:textColor="@color/color_white"
            android:textSize="48px"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_version_latest"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@id/layout_head"
        android:layout_marginLeft="@dimen/dimen_layout_margin"
        android:layout_marginRight="@dimen/dimen_layout_margin"
        android:padding="10px"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_latest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/str_update_new"
            android:textColor="@color/color_white"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv_latest_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="32px"
            tools:text="1.1.2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#384557"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_version_current"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@id/layout_version_latest"
        android:layout_marginLeft="@dimen/dimen_layout_margin"
        android:layout_marginRight="@dimen/dimen_layout_margin"
        android:padding="10px">

        <TextView
            android:id="@+id/tv_current_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/str_update_current"
            android:textColor="@color/color_white"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="32px"
            tools:text="1.1.2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#384557"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_dl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_version_current"
        android:layout_marginLeft="@dimen/dimen_layout_margin"
        android:layout_marginTop="10px"
        android:padding="10px"
        android:layout_marginRight="@dimen/dimen_layout_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_dl_progress"
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="24px"
            tools:text="111"/>

        <ProgressBar
            android:id="@+id/progress_dl"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="16px"
            android:progressDrawable="@drawable/drawable_progress_dl"
            tools:progress="50"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_update"
        style="@style/style_btn_confirm"
        android:layout_marginLeft="100px"
        android:layout_marginTop="944px"
        android:layout_marginRight="100px"
        android:text="@string/str_update_action"
        android:visibility="gone"/>
</RelativeLayout>