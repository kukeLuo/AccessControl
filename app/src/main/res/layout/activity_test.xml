<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF000000"
    >

    <Button
        android:id="@+id/btn_top_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP LIGHT"/>

    <Button
        android:id="@+id/btn_btm_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED LIGHT"/>

    <Button
        android:id="@+id/btn_btm_green_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN LIGHT"/>

    <Button
        android:id="@+id/btn_btm_yellow_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YELLOW LIGHT"/>

    <Button
        android:id="@+id/btn_open_door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN/CLOSE DOOR"/>

    <Button
        android:id="@+id/btn_openandclose_door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN THEN CLOSE DOOR"/>

    <TextView
        android:id="@+id/text_cardId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <com.brc.acctrl.view.MeetingInfoView
        android:id="@+id/meeting_view"
        android:layout_marginLeft="40px"
        android:layout_marginRight="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>