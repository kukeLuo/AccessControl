<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_2"
            style="@style/style_door_open_text"
            android:text="2" />

        <TextView
            android:id="@+id/tv_time_3"
            style="@style/style_door_open_text"
            android:layout_marginLeft="30px"
            android:text="3" />

        <TextView
            android:id="@+id/tv_time_4"
            style="@style/style_door_open_text"
            android:layout_marginLeft="30px"
            android:text="4" />

        <TextView
            android:id="@+id/tv_time_5"
            style="@style/style_door_open_text"
            android:layout_marginLeft="30px"
            android:text="5" />

        <TextView
            android:id="@+id/tv_time_6"
            style="@style/style_door_open_text"
            android:layout_marginLeft="30px"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_7"
            style="@style/style_door_open_text"
            android:text="7" />

        <TextView
            android:id="@+id/tv_time_8"
            style="@style/style_door_open_text"
            android:layout_marginLeft="30px"
            android:text="8" />

        <TextView
            android:id="@+id/tv_time_9"
            style="@style/style_door_open_text"
            android:layout_marginLeft="30px"
            android:text="9" />
    </LinearLayout>
</LinearLayout>