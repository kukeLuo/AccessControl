<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180px"
    tools:background="#000000"
    >

    <TextView
        android:id="@+id/tv_meeting_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="24px"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="40px"
        android:textStyle="bold"
        tools:text="14:00 - 15:00"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginLeft="50px"
        android:layout_marginBottom="12px"
        android:background="@drawable/bg_meeting_info_ver"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50px"
        android:layout_marginBottom="12px"
        android:background="@drawable/bg_meeting_info_ver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_meeting_avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@color/color_white"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_meeting_author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/color_white"
            android:textSize="20px"
            tools:text="2222"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/bg_meeting_info_hor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50px"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@drawable/bg_meeting_info_hor"/>
        />

        <TextView
            android:id="@+id/tv_meeting_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:maxWidth="440px"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/color_white"
            android:textSize="20px"
            tools:text="2222"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@drawable/bg_meeting_info_hor"/>
        />
    </LinearLayout>


</RelativeLayout>