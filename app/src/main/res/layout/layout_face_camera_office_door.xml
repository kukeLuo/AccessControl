<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.brc.acctrl.view.TexturePreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_margintop_scan"
        android:background="#000002"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_btm_mask"
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="#000002"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_scan_suc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="570px"
            android:layout_height="334px"
            android:background="@drawable/bg_face_door_result"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_user_avatar"
                android:layout_width="0px"
                android:layout_height="0px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/img_recognition_suc"
                android:drawablePadding="20px"
                android:gravity="center_vertical"
                android:text="@string/str_face_reg_suc"
                android:textColor="@color/color_white"
                android:textSize="50px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_scan_suc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="40px"
                tools:text="111" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_scan_err"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_face_suc_ac"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="570px"
            android:layout_height="334px"
            android:background="@drawable/bg_face_door_result"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/img_recognition_err"
                android:drawablePadding="20px"
                android:gravity="center_vertical"
                android:text="@string/str_face_reg_err_door"
                android:textColor="@color/color_white"
                android:textSize="50px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/str_retry"
                android:textColor="@color/color_white"
                android:textSize="40px" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_door_keep_open"/>
    <include layout="@layout/layout_pwd_input" />
</RelativeLayout>