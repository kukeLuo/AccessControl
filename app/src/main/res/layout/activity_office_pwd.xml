<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#152338"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back"
            style="@style/style_top_back"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/str_setting_pwd_title"
            android:textColor="@color/color_white"
            android:textSize="64px"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_check_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:drawableLeft="@drawable/icon_error"
        android:drawablePadding="10dp"
        android:text="@string/str_setting_pwd_error"
        android:textColor="@color/color_white"
        android:textSize="32px"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_title" />

    <EditText
        android:id="@+id/et_input_pwd"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/dimen_layout_margin"
        android:layout_marginTop="368px"
        android:layout_marginRight="@dimen/dimen_layout_margin"
        android:background="@drawable/bg_input_pwd"
        android:gravity="center"
        android:hint="@string/str_setting_enter_pwd_hint"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColor="@color/color_white"
        android:textColorHint="#999999"
        android:textSize="36px"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/dimen_layout_margin"
        android:layout_marginTop="50px"
        android:layout_marginRight="@dimen/dimen_layout_margin"
        android:background="@drawable/bg_pwd_enter"
        android:gravity="center"
        android:text="@string/str_confirm"
        android:textColor="@color/color_white"
        android:textSize="40px"
        app:layout_constraintTop_toBottomOf="@id/et_input_pwd" />

    <TextView
        android:id="@+id/tv_chg_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20px"
        android:drawableRight="@drawable/icon_arrow_right"
        android:drawablePadding="10px"
        android:text="@string/str_setting_chg_pwd"
        android:textColor="@color/color_white"
        android:textSize="32px"
        app:layout_constraintLeft_toLeftOf="@id/tv_enter"
        app:layout_constraintTop_toBottomOf="@id/tv_enter" />
</android.support.constraint.ConstraintLayout>